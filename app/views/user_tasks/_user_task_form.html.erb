<% icon = user_task.status? ? "<i class='fas fa-check-square'></i>".html_safe : "<i class='fas fa-square'></i>".html_safe %>

<%= simple_form_for [user_task.task, user_task],
      remote: true,
      data: { controller: "checkbox", checkbox_target: "form"} do |f| %>
  <%= f.check_box "status_#{user_task.id}", {checked: user_task.status == true, data: { action: "change->checkbox#submitForm" }, class: "checkbox-user-task" }, true, false %>
  <%= f.label "status_#{user_task.id}", icon %>
<% end %>
