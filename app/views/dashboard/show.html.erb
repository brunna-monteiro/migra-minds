<div class="square-profile"></div>
<div class="animate__animated animate__fadeInLeft">
  <div class="grid-profile" >
    <div class="back-btn">
      <%= link_to posts_path do %>
        <i id="button-style" class="fa-solid fa-chevron-left"></i>
      <% end %>
    </div>

    <div class="user-name">
      <h3><%= @new_user.first_name %> <%= @new_user.last_name %></h3>
      <h6>@<%= @new_user.username %></h6>
      <% unless @new_user == current_user %>
        <%= link_to chat_dashboard_path(@new_user), data: { turbo_method: :post } do %>
          <i id="button-style" class="fa-solid fa-comment-dots"></i>
        <% end %>
      <% end %>
    </div>
    <div class="profile-image">
      <div class="user-pic">
        <%= cl_image_tag @new_user.photo.key, width: 100, height: 100, crop: :thumb, gravity: :face %>
      </div>
    </div>
  </div>

  <div class="bio">
    <div>
      <p><%= @new_user.bio %></p>
    </div>
  </div>
</div>
