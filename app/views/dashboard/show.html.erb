<div class="square-profile"></div>

<div>
  <div class="grid-profile">
    <div class="user-name">
      <h3><%= @user.first_name %> <%= @user.last_name %></h3>
      <h6>@<%= @user.username %></h6>
    </div>
    <div class="profile-image">
      <div class="user-pic">
        <%= cl_image_tag @user.photo.key, width: 100, height: 100, crop: :thumb, gravity: :face %>
      </div>
    </div>
  </div>

  <div class="bio">
    <p><%= @user.bio %></p>
  </div>
</div>

<div class="profile-controller">
<%= link_to posts_path do %>
  <button id="button-style"><i class="fa-solid fa-circle-arrow-left"></i></button>
<% end %>
</div>

<% unless @user == current_user %>
  <%= link_to chat_dashboard_path(@user), data: { turbo_method: :post } do %>
    <i class="fa-solid fa-comment-dots"></i>
  <% end %>
<% end %>
