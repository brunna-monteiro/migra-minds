<div data-controller="search-event">
  <div class="d-flex justify-content-center">
    <div class="col-11 my-3">
      <%= form_with url: events_path, method: :get, html: {class:
                    "d-flex", data: {search_event_target: "form"}} do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control post-search-input",
              placeholder: "Type a keyword",
              data: {search_event_target: "input",
                     action: "keyup->search-event#update"
              }%>
        <%= button_tag(type: "submit", class: "btn post-search-button") do %>
          <i class="fa-solid fa-magnifying-glass"></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-11 col-md-6 events-cards-container">
    <%= render "events", events: @events, markers: @markers %>
  </div>
</div>
